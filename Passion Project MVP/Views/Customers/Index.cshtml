@model List<Sonia_s_Pizza_Store.Models.Customer>

<h2>Customers</h2>
<a asp-action="Create">Add Customer</a>

<table>
    <tr><th>ID</th><th>Name</th><th>Phone</th><th>Email</th><th>Actions</th></tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.Id</td>
            <td>@customer.FirstName @customer.LastName</td>
            <td>@customer.Phone</td>
            <td>@customer.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
            </td>
        </tr>
    }
</table>
