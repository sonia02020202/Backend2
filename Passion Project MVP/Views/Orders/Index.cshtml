@model List<Sonia_s_Pizza_Store.Models.Order>

<h2>Orders</h2>
<a asp-action="Create">New Order</a>

<table>
    <tr><th>ID</th><th>Customer</th><th>Date</th><th>Total</th><th>Status</th><th>Actions</th></tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.CustomerName</td>
            <td>@order.OrderDate</td>
            <td>@order.TotalAmount</td>
            <td>@order.Status</td>
            <td>
                <a asp-action="Edit" asp-route-id="@order.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@order.Id">Delete</a>
            </td>
        </tr>
    }
</table>
